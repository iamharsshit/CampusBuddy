    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/my_secondary_text</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/my_primary_text</item>
        <item name="android:textColorSecondary">@color/my_secondary_text</item>
        <item name="android:actionMenuTextColor">@color/my_secondary_text</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme_for_newevent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/my_secondary_text</item>

    </style>

    <style name="ContactsTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink_dark</item>
    </style>
    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/ic_keyboard_backspace_white_24dp</item>
    </style>

    <color name="brand_primary">#3E50B4</color>
    <color name="brand_primary_dark">#3646A8</color>
    <color name="brand_accent">#FE3E80</color>

    <style name="ShowContact" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryDark">@color/brand_primary_dark</item>
        <item name="colorAccent">@color/brand_accent</item>
    </style>


</resources>
