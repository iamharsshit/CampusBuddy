<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/my_accent</item>
        <item name="android:textColorPrimary">@color/my_primary_text</item>
        <item name="android:textColorSecondary">@color/my_secondary_text</item>
        <item name="android:actionMenuTextColor">@color/my_secondary_text</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <!--<item name="android:textColor">#000000</item>-->

    </style>
    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">#000000</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/my_primary_text</item>
        <item name="android:textColorSecondary">@color/my_secondary_text</item>
        <item name="android:actionMenuTextColor">@color/my_secondary_text</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

</resources>
