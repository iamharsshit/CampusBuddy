    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:actionMenuTextColor">@color/primary_text</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>
    <style name="MainAcitvityTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="PopupMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="CollapsedAppBarTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="ToolBarWithNavigationBack">
        <item name="actionBarItemBackground">?attr/selectableItemBackground</item>
        <item name="navigationIcon">@drawable/ic_keyboard_backspace_white_24dp</item>
    </style>

