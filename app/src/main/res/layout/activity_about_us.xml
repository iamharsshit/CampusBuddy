<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/mdg_logo_new" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            android:text="@string/group_description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/secondary_text"
            android:textSize="20sp"
            android:typeface="serif" />
        <!--android:textColor="#43d2fc"-->


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fb_about_us"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:background="@drawable/ripple_effect"
            android:padding="10dp"
            android:src="@drawable/fb_logo" />

        <ImageView
            android:id="@+id/git_about_us"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:background="@drawable/ripple_effect"
            android:padding="10dp"
            android:src="@drawable/git_logo" />


        <ImageView
            android:id="@+id/blog_about_us"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:background="@drawable/ripple_effect"
            android:padding="10dp"
            android:src="@drawable/blog_logo" />

    </LinearLayout>


</LinearLayout>