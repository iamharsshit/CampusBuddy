<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="10dp"
    android:orientation="vertical"
    android:id="@+id/cardviewfb">
    <!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="82dp"-->
    <!--android:layout_toStartOf="@+id/postmessage"-->
    <!--android:layout_toLeftOf="@+id/postmessage"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:id="@+id/iconfbpage"/>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/iconandname">
        <com.etsy.android.grid.util.DynamicHeightImageView
            android:id="@+id/fbpostpicicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/fbpagename"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|start"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateofpost"
        android:textColor="#B6B6B6"
        android:textAlignment="center"/>
    <com.etsy.android.grid.util.DynamicHeightTextView
        android:id="@+id/postmessage"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:autoLink="all"/>

    <com.etsy.android.grid.util.DynamicHeightImageView
        android:id="@+id/fbpostpic"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>

