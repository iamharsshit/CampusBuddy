<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to show simple map..."
        android:textSize="40dp"
        android:id="@+id/mapBut1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to show the mapview"
        android:textSize="40dp"
        android:id="@+id/mapBut2"/>

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to show the Timetable..."
        android:textSize="40dp"
        android:id="@+id/tnBut2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to show the Telephone Directory..."
        android:textSize="40dp"
        android:id="@+id/tdbtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to show fb"
        android:textSize="40dp"
        android:id="@+id/fbbtn"/>

    </LinearLayout>
